pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm like git
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh './build.sh'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './run_tests.sh'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
